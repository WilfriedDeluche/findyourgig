<h1><%= t('.welcome') %></h1>


<% if user_signed_in? %>
  <p><strong><%= current_user.name %></strong></p>
  
  <% if @current_user_roles.any? %>
  <p>
    <%= t('.your_access') %> : <br />
    <ul>
      <% @current_user_roles.each do |role| %>
        <li><%= t(role) %></li>
      <% end %>
    </ul>
  </p>
  <% end %>
  <hr />
<% end %>

<div class="geolocation">
  <%= form_tag search_path, method: :get do %>
    <div class="geolocation-alerts"></div>
    <%= hidden_field_tag :latitude %>
    <%= hidden_field_tag :longitude %>
    <%= label_tag :formatted_address, "Tapez votre adresse ou votre code postal" %>
    <%= text_field_tag :formatted_address, "", class: "span8" %><br />
    <%= submit_tag "Toutes les salles", class: "btn btn-success" %>
  <% end %>
</div>

<%= render 'shared/sidebar' %>
