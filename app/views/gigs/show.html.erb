<h2 class="page-header"><%= @gig.name %> <%= link_to t('.edit_gig'), edit_gig_path(@gig), class: "btn btn-success pull-right" %></h2>

<% if @gig.poster? %>
  <%= link_to image_tag(@gig.poster_url(:page)), poster_gig_path(@gig), class: "pull-right" %>
<% end %>

<p>
  <%= @gig.description %>
</p>

<p>
  <b><%= Venue.model_name.human %>:</b>
  <% unless @gig.venue.blank? %>        
    <%= @gig.venue.name %><br />
  <% else %>
    <em><%= t('not_specified') %></em>
  <% end %>
</p>

<% if @gig.soundcheck_time %>
<p>
  <b><%= Gig.human_attribute_name(:soundcheck_time) %>:</b>
  <%= l(@gig.soundcheck_time) %>
</p>
<% end %>

<p>
  <b><%= Gig.human_attribute_name(:doors_time) %>:</b>
  <%= l(@gig.doors_time) %>
</p>

<p>
  <b><%= Gig.human_attribute_name(:concert_start_time) %>:</b>
  <%= l(@gig.concert_start_time) %>
</p>

<% if @gig.concert_end_time %>
<p>
  <b><%= Gig.human_attribute_name(:concert_end_time) %>:</b>
  <%= l(@gig.concert_end_time) %>
</p>
<% end %>

<% if @main_act %>
  <h3><%= Gig.human_attribute_name("main_act") %></h3>
  <ul class="list-no-style"><li><%= link_to @main_act.band.name, @main_act.band, :class => "neutral-link" %></li></ul>
<% end %>

<% if @supporting_acts.any? %>
  <h3><%= Gig.human_attribute_name("supporting_acts") %></h3>
  <ul class="list-no-style">
    <% @supporting_acts.each do |act| %>
      <li><%= link_to act.band.name, act.band, :class => "neutral-link" %></li>
    <% end %>
  </ul>
<% end %>

<%= render 'shared/sidebar' %>