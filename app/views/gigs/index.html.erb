<h1>Listing gigs</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Soundcheck time</th>
    <th>Doors time</th>
    <th>Concert start time</th>
    <th>Concert end time</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @gigs.each do |gig| %>
  <tr>
    <td><%= gig.name %></td>
    <td><%= gig.description %></td>
    <td><%= gig.soundcheck_time %></td>
    <td><%= gig.doors_time %></td>
    <td><%= gig.concert_start_time %></td>
    <td><%= gig.concert_end_time %></td>
    <td><%= link_to 'Show', gig %></td>
    <td><%= link_to 'Edit', edit_gig_path(gig) %></td>
    <td><%= link_to 'Destroy', gig, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

