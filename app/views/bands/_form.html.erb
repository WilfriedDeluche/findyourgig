<%= form_for(@band) do |f| %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :creation_year %>
    <%= f.number_field :creation_year %>
  </p>
  <p>
    <%= f.label :city %>
    <%= f.text_field :city %>
  </p>
  <p>
    <%= f.label :description %>
    <%= f.text_area :description, :class => "span8", :rows => "8" %>
  </p>
  <p><%= f.submit class: "btn btn-primary" %></p>
<% end %>
