<%= form_for(@band) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name, :required => "required"  %>
  </p>
  <p>
    <%= f.label :creation_year %>
    <%= f.number_field :creation_year, class: "input-small", :required => "required" %>
  </p>
  <p>
    <%= f.label :city %>
    <%= f.text_field :city %>
  </p>
  <p>
    <%= f.label :description %>
    <%= f.text_area :description, class: "span8", rows: "8" %>
  </p>
  <p><%= f.submit class: "btn btn-primary" %></p>
<% end %>
