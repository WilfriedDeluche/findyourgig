<%= stylesheet_link_tag 'gmaps4rails' %>
<h2 class="page-header"><%= @venue.name %> <%= link_to t('.edit_venue'), edit_venue_path(@venue), class: "btn btn-success pull-right" %></h2>

<%= image_tag "http://maps.google.com/maps/api/staticmap?size=450x300&sensor=false&zoom=16&markers=#{@venue.latitude}%2C#{@venue.longitude}" %>
<!--<%= image_tag "http://maps.googleapis.com/maps/api/streetview?size=450x300&sensor=false&zoom=16&markers=#{@venue.address}" %>-->

<p>
  <%= @venue.address_1 %><br />
  
  <% unless @venue.address_2.blank? %>        
    <%= @venue.address_2 %><br />
  <% end %>
  
  <%= @venue.postal_code %> <%= @venue.city %><br />

  <%= Carmen::Country.coded(@venue.country).name %>
</p>

<p>
  <strong><%= Venue.human_attribute_name(:telephone) %> :</strong>  
  <% unless @venue.telephone.blank? %>        
    <%= @venue.telephone %>
  <% else %>
    <em><%= t('not_specified') %></em>
  <% end %>
</p>

<p>
  <strong><%= Venue.human_attribute_name(:email_address) %> :</strong>  
  <% unless @venue.email_address.blank? %>        
    <%= @venue.email_address %>
  <% else %>
    <em><%= t('not_specified') %></em>
  <% end %>
</p>

<p>
  <strong><%= Venue.human_attribute_name(:website) %> :</strong>  
  <% unless @venue.website.blank? %>        
    <%= @venue.website %>
  <% else %>
    <em><%= t('not_specified') %></em>
  <% end %>
</p>

<h4><%= t('.nearby_venues') %></h4>
<% unless @nearby_venues.empty? %>
<ul>
  <% for location in @nearby_venues %>
  <li><%= link_to location.name + " (" + location.address + ")", location %> (<%= distance_display(location) %>)</li>
<% end %>
</ul>
<% else %>
  <%= t('.no_nearby_venues') %>
<% end %>

<%= gmaps4rails(@json) %>

<%= render 'sidebar' %>
