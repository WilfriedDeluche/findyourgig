<% unless @venue.find_feedback_users.include?current_user.id %>
	<% if @feedback.persisted? %>
		$('#feedback').html("<%=j render @venue.feedbacks %>");
	<% else %>
		alert("Vous avez déjà posté un feedback pour cette venue");
	<% end %>
<% else %>
	$('#feedback').html("<%=j render @venue.feedbacks %>");
	$('#feedback_form').hide();
<% end %>