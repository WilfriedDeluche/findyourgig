<div class="geolocation">
  <%= form_tag search_path, method: :get do %>
    <div class="geolocation-alerts"></div>
    <%= hidden_field_tag :latitude %>
    <%= hidden_field_tag :longitude %>
    <%= label_tag :formatted_address, "Tapez votre adresse ou votre code postal" %>
    <%= text_field_tag :formatted_address, params[:formatted_address], class: "span12" %><br />
    <%= submit_tag "Toutes les salles", class: "btn btn-large btn-primary span6" %>
  <% end %>
</div>